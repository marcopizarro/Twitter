<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/twitterDarkBlue"
    android:backgroundTint="@color/twitterDarkBlue"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivProfileImageDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvHandleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvNameDetail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:textColor="#A8A8A8"
        tools:text="\@marco_pizazz" />

    <TextView
        android:id="@+id/tvSinceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvHandleDetail"
        android:fontFamily="sans-serif-light"
        android:textColor="#A8A8A8"
        android:textSize="14sp"
        tools:text="now" />

    <TextView
        android:id="@+id/tvBodyDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHandleDetail"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/ivProfileImageDetail"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColor="#FFFFFF"
        tools:text="Angry tweet here" />

    <TextView
        android:id="@+id/tvNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImageDetail"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        tools:text="Marco Pizarro" />

    <ImageView
        android:id="@+id/ivImageDetail"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/tvBodyDetail"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImageDetail"
        android:foregroundGravity="left"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnReplyDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/ivImageDetail"
        android:layout_centerInParent="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImageDetail"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:src="@drawable/vector_compose_dm_fab" />

